<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_tieu_chi_dg_tree" model="ir.ui.view">
            <field name="name">tieu.chi.dg.tree</field>
            <field name="model">tieu.chi.dg</field>
            <field name="arch" type="xml">
                <tree string="Tiêu chí đánh giá">
                    <field name="ma_tc"/>
                    <field name="ten_tc"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_tieu_chi_dg_form" model="ir.ui.view">
            <field name="name">tieu.chi.dg.form</field>
            <field name="model">tieu.chi.dg</field>
            <field name="arch" type="xml">
                <form string="Tiêu chí đánh giá">
                    <sheet>
                        <group>
                            <field name="ma_tc"/>
                            <field name="ten_tc"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Action -->
        <record id="action_tieu_chi_dg" model="ir.actions.act_window">
            <field name="name">Tiêu chí đánh giá</field>
            <field name="res_model">tieu.chi.dg</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
